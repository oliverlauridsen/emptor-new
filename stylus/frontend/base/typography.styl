html, body {
    font-family: $base_font;
    font-size: $font_size;
    line-height: $line_height;
    color: $color_font;
}
h1 {
    font-size: 2.3em;
}
h2 {
    font-size: 1.8em;
}
h3 {
    font-size: 1.4em;
}
h4 {
    font-size: 1.2em;
}
h5 {
    font-size: 1.1em;
}
h6 {
    font-size: 1em;
    font-weight: bold;
}
p {
    font-size: 1em;
    margin-bottom: 1em;
}
b, strong {
    font-weight: bold;
}
a {
    color: $color_link;
    text-decoration: underline;
    outline: none;
    &:hover, &:focus {
        color: $color_hover;
        text-decoration: underline;
    }
}
ul, ol {
    margin: 0 0 1em;
    padding: 0 0 0 25px;
    li {
        margin: 0;
        padding: 0;
    }
}
ul li {
    list-style: disc;
}
ol li {
    list-style: decimal;
}